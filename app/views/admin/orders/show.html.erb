<div class="container my-5">
  <div class="row">
    <h10 style="background-color: #d3d3d3">注文履歴詳細</h10>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">
      <table class="table table-borderless">

        <tbody>
          <tr>
            <td>購入者</td>
            <td>
              <%= @order.customer.last_name %>
              <%= @order.customer.first_name %>
            </td>
          </tr>

          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>

          <tr>
            <td>配送先</td>
            <td><%= @order.postal_code %><br>
                <%= @order.address %><br>
                <%= @order.name %>
            </td>
          </tr>

          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>

      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-9">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <% @order_details.each do |order_detail| %>
          <tbody>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price * 1.1).floor %></td>
              <td><%= order_detail.amount %></td>
              <td><%= (order_detail.item.price * order_detail.amount * 1.1).floor %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
                  <%= f.select :making_status, [["着手不可", "着手不可"], ["製作待ち","製作待ち"], ["製作中","製作中"], ["製作完了","製作完了"]] %>
                  <%= f.submit "更新", class: "btn btn-primary btn-sm ml-3" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <div class="col-sm-3 d-flex">
      <table class="table table-borderless align-self-end">
        <tbody>
          <tr class="border-bottom border-dark">
            <td>商品合計</td>
            <td><%= (@order.total_payment).floor.to_s(:delimited, delimiter: ',') %></td>
          </tr>

          <tr class="border-bottom border-dark">
            <td>送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>

          <tr class="border-bottom border-dark">
            <td>請求合計金額</td>
            <td><%= @order.total_payment+@order.shipping_cost %></td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>