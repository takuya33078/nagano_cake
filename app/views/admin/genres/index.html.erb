<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h10 style="background-color: #d3d3d3">ジャンル一覧・追加</h10>

        <div class="col-md-8">
          <strong>ジャンル名</strong>


        <div class="row d-flex justify-content-center">
          <% if flash[:genre_created_error] %>
            <span class="text-danger"><%= flash[:genre_created_error] %></span>
          <% end %>
        </div>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control" %>         <%= f.submit "新規登録", class: "btn btn-success mt-3 mx-auto" %>
        </div>


        </div>
      <% end %>
    </div>
    </div>
    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th>ジャンル名</th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>