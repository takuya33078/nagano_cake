<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h10 style="background-color: #d3d3d3">ジャンル編集</h10>
        <div class="row d-flex justify-content-center">
          <% if flash[:genre_created_error] %>
          <span class="text-danger"><%= flash[:genre_created_error] %></span>
          <% end %>
        </div>


      <%= form_with model: @genre, url: admin_genre_path do |f| %>
        <div class="form-group">
         <strong>ジャンル名</strong> <%= f.text_field :name, class: "form-control" %>         <%= f.submit "変更を保存", class: "btn btn-success mt-3 mx-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>