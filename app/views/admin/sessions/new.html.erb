<h10 style="background-color: #d3d3d3">管理者ログイン</h10>

<%= form_with model: @admin, url: admin_session_path, local: true  do |f| %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>         <%= f.password_field :password, autocomplete: "new-password" %>
  </div>



  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary btn-lg center-block" %>
  </div>
<% end %>