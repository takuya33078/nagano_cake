<div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div>
            <h10 style="background-color: #d3d3d3">ショッピングカート</h10>
            <%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete, class: "pull-right btn btn-danger" %>
          </div>
            <table class="table table-hover table-bordered col-xs-10" >
             <thead>
              <tr class="info">
                <th class="col-xs-3">商品名</th>
                <th class="col-xs-2">単価（税込）</th>
                <th class="col-xs-1">数量</th>
                <th class="col-xs-1">小計</th>
                <th class="col-xs-1"></th>
              </tr>
             </thead>
             <tbody>
              <% @cart_items.each do |cart_item| %>
                  <tr>
                    <td><%= cart_item.item.name %></td>
                    <td>¥<%= cart_item.item.with_tax_price%></td>

                   <td class="col-xs-1">
                     <%= form_with model: cart_item, url: public_cart_item_path(cart_item), method: :PATCH do |f| %>
                        <p>
                          <%= f.number_field :amount, min:1, max:10000, step:1 %>
                          <%= f.submit "変更", class: "btn btn-success" %>
                        </p>
                     <% end %>
                   </td>
                   <td>¥<%= cart_item.subtotal%></td>
                   <td class="col-xs-1">
                    <%= link_to "削除する", public_cart_item_path(cart_item.id), method: :DELETE, class: "btn btn-danger" %>
                   </td>
                  </tr>
              <% end %>
             </tbody>
            </table>
        </div>
      </div>


<div class="col-xs-8">
    <span>
    <%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary", data: {"turbolinks" => false} %>
    </span>
</div>
<div class="col-xs-4">
    <table class="table table-bordered">
        <tr>
            <td class="info col-xs-2"><strong>合計金額</strong></td>
            <td class="col-xs-2">¥<%= @total_price.floor.to_s(:delimited, delimiter: ',') %></td>
        </tr>
    </table>
</div>


<div class = "col-xs-4 col-xs-offset-4">
  <% if @cart_items != [] %>
    <span>
        <%= link_to "情報入力に進む", new_public_order_path, class: "col-xs-12 btn btn-success"%>
    </span>
  <% end %>
    </div>
</div>
</div>
