<div class="container">
    <div class="row">
        <div class="mx-auto">
            <h8>商品一覧（全<%= @items.count %>件）</h8>
            <div class="col-xs-9 col-xs-offset-1">
        		<div class="product-card-content">
            		<% @items.each do |item| %>
                        <div class="col-xs-3" style="float: left; padding-right: 0px; padding-left: 0px; margin: 10px 0;">
                			<%= link_to public_item_path(item.id) ,style: "color: black;" do %>
                				<%= attachment_image_tag item, :image, size: "250x170", format: 'jpeg',fallback: "no_image.jpg" %><br>
                				<%= item.name %><br>
                				¥<%= item.price %>
                	        <% end %>
                        </div>
            		<% end %>
        		</div>
        	</div>
        </div>
    </div>

    <div class="row">
       <div class="col-md-4 offset-md-4 py-2  mt-5">
        <%= paginate @items %>
       </div>
    </div>
</div>

