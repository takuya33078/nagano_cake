<div class="container my-5">
 <div class="row">

  <div class="col-9 my-3">
  	<div class="row">
	    <div class="col-5">
        <%= attachment_image_tag @item, :image, size: "50x50", format: "jpeg", fallback: 'no_image.jpg', size: '300x300', class: "rounded" %>
	    </div>

      <div class="col-5">
        <div class="row">
          <h4><%= @item.name %></h4>
        </div>


        <div class="row mt-3">
          <p class="ml-5"><%= @item.introduction %></p>
        </div>


        <div class="row">
          <strong class="red-border px-3 ml-auto"><%= (@item.price * 1.1).floor %>円 (税込)</strong>
        </div>

      </div>
    </div>

    <div class="row">
      <div class="offset-6">

        <div class="row">
          <%= form_with model: @cart_item, url: public_cart_items_path, method: :post do |f| %>
            <%= f.number_field :amount, placeholder: "個数選択" %><span>個</span>
            <%= f.hidden_field :item_id,  value: @item.id %>
            <%= f.submit "カートに入れる", class: "btn btn-success" %>
      　　<% end %>
        </div>

        <div class="row">
          <%= flash[:into_cart_error] %>
        </div>

      </div>
    </div>

  </div>
 </div>
</div>