<div class="container">
  <div class="row">
    <div class="offset-1">
      <%= flash[:order_new] %>
      <h10 style="background-color: #d3d3d3">注文情報入力</h10>
    </div>
  </div>
      <div class="row mt-3">
       <strong class="red-border px-3">支払方法</strong>
      </div>
        <%= form_with model:@order, url:public_orders_confirm_path, method: :post, local: :true do |f| %>
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
          <div class="form-group">
           <%= f.label "お届け先" %>
            <div class="field">
             <%= f.radio_button :address_option, 0 %> ご自身の住所
              <div class="mx-3">
               <%= current_customer.address%>
              </div>
            </div>

          <div class="field">
              <%= f.radio_button :address_option, 1 %> 登録済住所から選択
            <div class="mx-3">
              <%= f.select :registered_address, @addresses.all.map { |address| ["#{address.postal_code}" "#{address.address}" "#{address.name}", address[:id]]} %><br><br>
            </div>
          </div>
          <div class="field">
           <%= f.radio_button :address_option, 2 %> 新しいお届け先
            <div class="mx-3">
             <div class="field">
              <%= f.label "郵便番号(ハイフンなし)", class:"col-3 px-3" %>
              <%= f.text_field :postal_code, class:"col-3" %>
             </div>
              <div class="field">
               <%= f.label "住所", class:"col-3 px-3" %>
               <%= f.text_field :address, class:"col-7" %>
              </div>
               <div class="field">
                <%= f.label "宛名", class:"col-3 px-3" %>
                <%= f.text_field :name, class:"col-3" %>
               </div>
            </div>
            </div>
              <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
        <% end %>
</div>