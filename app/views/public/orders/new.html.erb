<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <%= flash[:order_new] %>
      <h10 style="background-color: #d3d3d3">注文情報入力</h10>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-2 col-5">

      <div class="row">
        <strong class="red-border px-3">支払方法</strong>
      </div>
      <%= form_with model: @cart_items, url: public_orders_confirm_path, method: :post do %>
        <div class="form-check mt-3">
          <%= radio_button_tag :payment, :クレジットカード %>
          <%= label_tag :payment, "クレジットカード", {value: :"クレジットカード", style: "display: inline-block;"} %><br>
          <%= radio_button_tag :payment, :銀行振込 %>
          <%= label_tag :payment, "銀行振込", {value: :"銀行振込", style: "display: inline-block;"} %>
        </div>
        <div class="row mt-3">
          <strong class="red-border px-3">お届け先</strong>
        </div>

        <div class="form-check mt-3">
          <%= radio_button_tag :select, :address %>
          <%= label_tag :select, "ご自身の住所", {value: :my_address, style: "display: inline-block;"} %>
      
          <%= radio_button_tag :select, :select_address %>

        </div>

        <div class="row mt-5">
          <%= submit_tag "確認画面へ進む", class: "btn btn-primary ml-auto" %>
        </div>
      <% end %>


    </div>

    <div class=" offset-1 col-3">

      <div class="row">
        <strong class="red-border px-3">新しいお届け先を登録する</strong>
      </div>

        <%= form_with model: @ship_address, url: public_orders_confirm_path do |f| %>

        <div class="form-group row mt-3">
          <%= f.text_field :postal_code, placeholder: "郵便番号", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :address, placeholder: "住所", class: "form-control offset-1 col-10" %>
        </div>

        <div class="form-group row">
          <%= f.text_field :name, placeholder:"令和道子", class: "form-control offset-1 col-5" %>
        </div>



        <% end %>
    </div>


  </div>
</div>