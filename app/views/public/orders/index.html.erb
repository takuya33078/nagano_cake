<div class="container">
  <div class="row">
    <div class-"offset-1">
      <h10 style="width: 100px;background-color: #d3d3d3">注文履歴一覧</h10>
    </div>
  </div>

  <div class="row">
      <table class="table table-border">
        <thead>
          <tr class="red-border">
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
           <% @orders.each do |order| %>
         <tr>
          <td class="col-xs-3"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="col-xs-2">
            <%= order.postal_code %>
            <%= order.address %>
            <%= order.name %>
          </td>
            <td class="col-xs-1">
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item_id %><br>
              <% end %>
            </td>
              <td class="col-xs-2"><%= order.total_payment.to_s(:delimited, delimiter: ',') %></td>
              <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary" %></td>
         </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>