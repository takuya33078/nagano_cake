<div class="container">
 <div class="row">
    <div class="col-lg-8">
    <h10 style="width: 100px;background-color: #d3d3d3">配送先登録/一覧</h10>
    </div>
 </div>
 <div class="row">
     <div class="col-md-8">
    <%= form_with model: @address, url:public_addresses_path do |f| %>
     <div class="address">
       <div class="form-group col-xs-12">
        <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-xs-3 control-label" %>
        <%= f.text_field :postal_code, class: "col-xs-4 form-control-static postal_code" %>
        </div>

        <div class="form-group col-xs-12">
         <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
         <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
        </div>

        <div class="form-group col-xs-12">
         <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
         <%= f.text_field :name, class: "col-xs-4 form-control-static name" %> <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>

     </div>
    <% end %>
   </div>
 </div>
 <div class="row">
  <div class="col-xs-12">
    <table class="table table-hover table-bordered">
     <thead>
      <tr class="address-info">
       <th class="col-xs-2">郵便番号</th>
       <th class="col-xs-6">住所</th>
       <th class="col-xs-2">宛名</th>
       <th class="col-xs-2"></th>
      </tr>
     </thead>
    <tbody>
     <% @addresses.each do |address| %>
      <tr>
       <td class="col-xs-2"><%= address.postal_code %></td>
       <td class="col-xs-6"><%= address.address %></td>
       <td class="col-xs-2"><%= address.name %></td>
       <td class="col-xs-2">
       <%= link_to "編集する", edit_public_address_path(address.id), class: " btn-sm btn-primary" %>
       <%= link_to "削除する", public_address_path(address.id), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: " btn-sm btn-danger" %>
       </td>
      </tr>
     <% end %>
    </tbody>
   </table>

  </div>


 </div>


</div>
